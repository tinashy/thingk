</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <!-- Image and text -->
        <nav class="navbar navbar-light bg-light">
            <a class="navbar-brand logo-icon" href="/">
                <ion-icon name="paw-outline" class="d-inline-block align-top"></ion-icon>
            </a>
        </nav>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/">thinGK <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/thingks/new">create</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/thingks">thinGKs</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <% if(currentUser && currentUser !== undefined) { %>
                <li class="nav-item">
                    <a class="nav-link" href="#">signed in as <%= currentUser.username %></a>
                </li>
                <% } %>
                <% if(!currentUser) { %>
                <li class="nav-item">
                    <a class="nav-link" href="/signup">signup</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/login">login</a>
                </li>
                <% } %>
                <% if(currentUser) { %>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">logout</a>
                </li>
                <% } %>
            </ul>
        </div>
    </nav>

    <% if(success && success.length > 0) { %>
    <div class="alert alert-success" role="alert">
        <%= success %>
    </div>
    <% } %>

    <% if(error && error.length > 0) { %>
    <div class="alert alert-danger" role="alert">
        <%= error %>
    </div>
    <% } %>