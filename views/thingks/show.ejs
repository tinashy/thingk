<%- include ("../partials/header" ) %>

<div class="row show-wrapper">
  <div class="col-lg-4">
    <ul class="list-group">
      <li class="list-group-item active">Cras justo odio</li>
      <li class="list-group-item">Dapibus ac facilisis in</li>
      <li class="list-group-item">Morbi leo risus</li>
      <li class="list-group-item">Porta ac consectetur ac</li>
      <li class="list-group-item">Vestibulum at eros</li>
    </ul>
  </div>
  <div class="col-lg-8">
    <div class="card mb-3">
      <img src="<%= thingk.image %>" class="card-img-top" alt="Thingk Image">
      <div class="card-body">
        <h5 class="card-title"><%= thingk.name %></h5>
        <p class="card-text"><%= thingk.desc %></p>
        <p class="card-text text-danger">
          <small>Price $<%= thingk.price %>.00/unit</small>
          &nbsp;&nbsp;|&nbsp;<a href="/thingks/<%= thingk.id %>/edit">edit</a>&nbsp;|&nbsp;<a href="<%= thingk.externalUrl %>" target="_blank">go to source</a>
          <form class="delete-form" action="/thingks/<%= thingk.id %>?_method=DELETE" method="POST">
            <button class="btn btn-sm btn-outline-danger">delete</button>
          </form>
          <a href="/thingks/<%= thingk.id %>/comments/new"><button class="btn btn-sm btn-outline-primary">Comment</button></a>
        </p>
      </div>
    </div>
    <div class="card">
      <div class="card-header">
        Comments
      </div>
      <div class="card-body">
        <% thingk.comments.forEach((comment) => { %>
          <h6 class="card-title"><%= comment.username %> - <small><%= comment.text %></small></h6>
          <button class="btn btn-sm btn-warning"><a href="/thingks/<%= thingk.id %>/comments/<%= comment.id %>/edit">edit</a></button>
          <form style="display: inline;" action="/thingks/<%= thingk.id %>/comments/<%= comment.id %>?_method=DELETE"><button class="btn btn-sm btn-danger">delete</button></form>
        <% }) %>
      </div>
    </div>
  </div>
</div>

<%- include ("../partials/footer") %>