<%- include ("../partials/header") %>

<div class="container contact">
  <div class="row">
    <div class="col-md-3">
      <div class="contact-info">
        <ion-icon name="pencil-outline" class="new-icon"></ion-icon>
        <h2>Edit Product</h2>
        <h5>A tweak here, another there! All love, all money :)</h5>
      </div>
    </div>
    <div class="col-md-9">
      <form action="/thingks/<%= thingk.id %>?_method=PUT" method="POST">
        <div class="contact-form">
          <div class="form-group">
            <label class="control-label col-sm-2" for="thingk[name]">Product Title:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="thingk[name]" value="<%= thingk.name %>">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="thingk[image]">Image url:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" value="<%= thingk.image %>" name="thingk[image]">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="thingk[externalUrl]">Url:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" value="<%= thingk.externalUrl %>" name="thingk[externalUrl]">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="thingk[price]">Price:</label>
            <div class="col-sm-10">
              <input type="number" class="form-control" value="<%= thingk.price %>" name="thingk[price]">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="thingk[desc]">Product Description:</label>
            <div class="col-sm-10">
              <textarea class="form-control" rows="5" name="thingk[desc]"><%= thingk.desc %></textarea>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-default">Submit</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include ("../partials/footer") %>