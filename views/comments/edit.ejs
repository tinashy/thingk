<%- include ("../partials/header") %>

<div class="container contact">
  <div class="row">
    <div class="col-md-3">
      <div class="contact-info">
        <ion-icon name="pencil-outline" class="new-icon"></ion-icon>
        <h2>Comment</h2>
        <h5>Say what you feel, give them your fill!</h5>
      </div>
    </div>
    <div class="col-md-9">
      <form action="/thingks/<%= thingk.id %>/comments/<%= comment.id %>?_method=PUT" method="POST">
        <div class="contact-form">
          <div class="form-group">
            <label class="control-label col-sm-2" for="comment">Comment:</label>
            <div class="col-sm-10">
              <textarea class="form-control" rows="5" name="comment[text]"><%= comment.text %></textarea>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-default">Submit</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include ("../partials/footer") %>